[core]
	autocrlf = input
[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
    l  = log --oneline --decorate
    ll = log --oneline --decorate --name-status
    s  = status -sb
    b  = branch -a
    d  = diff -b
    c  = commit
[push]
	default = tracking
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff

